{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist/",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "typeRoots": [
            "src/types",
            "./node_modules/@types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}